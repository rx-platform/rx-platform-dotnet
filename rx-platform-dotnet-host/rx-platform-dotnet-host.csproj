<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>RxPlatform.Hosting</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <EnableUnmanagedExports>true</EnableUnmanagedExports>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <Version>1.7.4</Version>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>{rx-platform} .NET Core Host</Title>
    <Authors>ENSACO Solutions doo</Authors>
    <Company>ENSACO Solutions doo</Company>
    <Product>{rx-platform}</Product>
    <Description>Package that {rx-platform} uses as .NET Core hosting library.</Description>
    <PackageIcon>rx-platform-256.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\Images\Logo\rx-platform-256.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.14.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ENSACO.RxPlatform.Attributes\ENSACO.RxPlatform.csproj">
      <Private>True</Private>
    </ProjectReference>
    <ProjectReference Include="..\ENSACO.RxPlatform.Modbus\ENSACO.RxPlatform.Modbus.csproj">
      <Private>True</Private>
    </ProjectReference>
  </ItemGroup>
  
</Project>
